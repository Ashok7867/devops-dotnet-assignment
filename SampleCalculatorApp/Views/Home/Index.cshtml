@using SampleCalculatorApp.Models

@model Operation

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Basic Calculator</h1>
</div>

<section>
    <div class="container">
        <div class="col-lg-4 offset-lg-4">
            <form asp-controller="Home" asp-action="Index" method="post">
                <div class="row">
                    <div class="form-group p-2">
                        <label asp-for="OperationType" class="col-lg-12"></label>
                        <select asp-for="OperationType" class="form-control col-lg-2" asp-items="Html.GetEnumSelectList<OperationType>()">
                            <option selected="selected" value="">Select</option>
                        </select>
                    </div>
                </div>
                <div class="form-group p-2">
                    <div class="row">
                        <label asp-for="NumberA" class="col-lg-12"></label>
                        <input type="number" asp-for="NumberA" class="form-control col-lg-2" />
                    </div>
                </div>
                <div class="form-group p-2">
                    <div class="row">
                        <label asp-for="NumberB" class="col-lg-12"></label>
                        <input type="number" asp-for="NumberB" class="form-control col-lg-2" />
                    </div>
                </div>
                <div class="form-group p-2">
                    <div class="row">
                        <label asp-for="Result" class="col-lg-12"></label>
                        <input type="number" disabled="disabled" class="form-control col-lg-2" asp-for="Result" />
                    </div>
                </div>
                <div class="form-group p-2">
                    <div class="row">
                        <input type="submit" class="btn btn-primary" value="Submit" asp-action="Index" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

